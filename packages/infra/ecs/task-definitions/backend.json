{
  "family": "bellyfed-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/bellyfed-backend-task-role",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/bellyfed-backend:latest",
      "portMappings": [
        {
          "containerPort": 4000,
          "protocol": "tcp",
          "name": "http"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/bellyfed-backend",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "4000"
        },
        {
          "name": "AWS_REGION",
          "value": "${AWS_REGION}"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/bellyfed/database-url"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/bellyfed/jwt-secret"
        },
        {
          "name": "REDIS_URL",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/bellyfed/redis-url"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "node healthcheck.js || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 90
      },
      "stopTimeout": 30,
      "startTimeout": 180,
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "logs",
          "containerPath": "/app/logs",
          "readOnly": false
        }
      ],
      "volumesFrom": [],
      "linuxParameters": {
        "initProcessEnabled": true
      },
      "firelensConfiguration": null,
      "dependsOn": [],
      "disableNetworking": false,
      "interactive": false,
      "pseudoTerminal": false,
      "readonlyRootFilesystem": false,
      "privileged": false,
      "workingDirectory": "/app",
      "user": "backend"
    }
  ],
  "volumes": [
    {
      "name": "logs",
      "efsVolumeConfiguration": {
        "fileSystemId": "${EFS_FILE_SYSTEM_ID}",
        "rootDirectory": "/logs",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "${EFS_ACCESS_POINT_ID}",
          "iam": "ENABLED"
        }
      }
    }
  ],
  "placementConstraints": [],
  "tags": [
    {
      "key": "Environment",
      "value": "${ENVIRONMENT}"
    },
    {
      "key": "Application",
      "value": "bellyfed"
    },
    {
      "key": "Component",
      "value": "backend"
    }
  ]
}
