{
  "name": "bellyfed-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:fast": "turbo build:fast",
    "dev": "turbo dev --filter=@bellyfed/web",
    "lint": "turbo lint",
    "lint:strict": "turbo lint:strict",
    "lint:fix": "turbo lint:fix",
    "type-check": "turbo type-check",
    "type-check:strict": "tsc --noEmit && turbo type-check",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "prepare": "husky install",
    "quality-check": "pnpm run lint:strict && pnpm run type-check:strict && pnpm run format:check",
    "fix:all": "pnpm run lint:fix && pnpm run format"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@eslint/eslintrc": "^2.1.4",
    "@eslint/js": "^8.57.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "tsc-files": "^1.1.4",
    "turbo": "^2.0.0",
    "typescript": "~5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.15.4",
  "type": "module",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
