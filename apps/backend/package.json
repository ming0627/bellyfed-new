{
  "name": "@bellyfed/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "rm -rf ./dist && tsc",
    "build:fast": "tsc --incremental",
    "start": "node dist/src/index.js",
    "lint": "eslint .",
    "lint:strict": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "type-check:strict": "tsc --noEmit --strict",
    "test": "echo \"No tests specified\" && exit 0",
    "clean": "rm -rf dist node_modules/.cache"
  },
  "dependencies": {
    "@bellyfed/db": "workspace:*",
    "@bellyfed/trpc": "workspace:*",
    "@bellyfed/utils": "workspace:*",
    "@trpc/server": "^10.45.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "superjson": "^2.2.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "nodemon": "^3.0.3",
    "tsx": "^4.7.0",
    "typescript": "~5.3.3"
  }
}
